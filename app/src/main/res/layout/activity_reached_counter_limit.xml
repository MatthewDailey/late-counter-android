<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You&apos;ve reached the limit for the number of counters."
        android:id="@+id/reached_limit_first_text_view"
        android:gravity="center_vertical"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="To unlock more counters, either buy premium mode (it costs less than a cup of coffee) or enter a promo code."
        android:id="@+id/reached_limit_second_text_view"
        android:gravity="center_vertical"
        android:layout_margin="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/promo_edit_text"
        android:hint="enter promo code"
        android:textAlignment="center"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No thanks."
            android:background="?android:selectableItemBackground"
            android:id="@+id/reached_limit_cancel"
            android:layout_weight="1"
            android:textColor="@color/accent_material_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Premium! :D"
            android:background="?android:selectableItemBackground"
            android:id="@+id/reached_limit_buy_button"
            android:layout_weight="1"
            android:textColor="@color/accent_material_light" />

    </LinearLayout>


</LinearLayout>