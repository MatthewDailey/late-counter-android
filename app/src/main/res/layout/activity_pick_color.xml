<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <at.markushi.ui.CircleButton
            android:id="@+id/choose_blue_button"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:cb_color="@color/blue"
            app:cb_pressedRingWidth="8dip"
            android:layout_weight="1"
            android:layout_marginRight="5dp" />

        <at.markushi.ui.CircleButton
            android:id="@+id/choose_black_button"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:cb_color="@android:color/black"
            app:cb_pressedRingWidth="8dip"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <at.markushi.ui.CircleButton
            android:id="@+id/choose_red_button"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:cb_color="@color/red"
            app:cb_pressedRingWidth="8dip"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <at.markushi.ui.CircleButton
            android:id="@+id/choose_green_button"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:cb_color="@color/green"
            app:cb_pressedRingWidth="8dip"
            android:layout_weight="1" />

        <at.markushi.ui.CircleButton
            android:id="@+id/choose_yellow_button"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:cb_color="@color/yellow"
            app:cb_pressedRingWidth="8dip"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>